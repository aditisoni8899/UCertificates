<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/certificate_item"
    android:layout_margin="@dimen/margin"
    android:layout_height="@dimen/certificate_item_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/certificate_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/certificate_imageheight"
        android:layout_marginTop="@dimen/margin"
        android:padding="2dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:background="@drawable/border"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/certificate_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workshop"
        android:textColor="@android:color/black"
        android:padding="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin"
        android:background="#00ffffff"
       />

</LinearLayout>